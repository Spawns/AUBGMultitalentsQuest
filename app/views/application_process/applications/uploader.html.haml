.row
  .large-12.columns.fixed-height
    %fieldset
      %legend Liberal Arts Application Form
      = render partial: 'application_steps_links'
      = simple_form_for @application , url: wizard_path do |f|
        .row
          = f.simple_fields_for :uploader , @uploader do |uploader_form|
            .row
              .large-3.columns
                = uploader_form.input :title
            .row
              .large-12.columns
                = uploader_form.input :description, :input_html => {:rows => 3}
          .row
            = link_to 'skip', next_wizard_path
            = button_tag( :class => "button") do
              Next
              %i.fi-arrow-right



