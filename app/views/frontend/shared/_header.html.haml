%div{:class=> ("sticky" unless !active?(root_path))}
  .full-header
    %nav.top-bar{:style => 'background-color: rgb(244, 30, 20); min-width: 100%;'}
      %ul.title-area{ :style => 'z-index:999;'}
        %li.name{:style => "padding-left: 10px;"}
          %h1
            = link_to image_tag("headerlogo.png"), "https://www.aubg.edu"
      %section.top-bar-section{:style => "padding-left: 300px; display: table-cell; vertical-align: middle;"}
        %ul.right
          = link_to  "ADMISSION" , "https://www.aubg.edu/admissions", {:style=>'color:#FFFFFF; margin-left: 10px; margin-right: 10px; font-size: 20px; display: inline-block;'}
          = link_to  "ACADEMIC QUALITY" , "https://www.aubg.edu/academics-bachelor-degrees" , {:style=>'color:#FFFFFF; margin-left: 10px; margin-right: 10px; font-size: 20px; display: inline-block;'}
          = link_to  "STUDENT LIFE" , "https://www.aubg.edu/student-life", {:style=>'color:#FFFFFF; margin-left: 10px; margin-right: 10px; font-size: 20px; display: inline-block;'}
    %nav.top-bar{"data-topbar" => "", :role => "navigation" , :id => "access"}
      %ul.title-area{ :style => 'z-index:999;'}
        %li.name{:style => "padding-left: 10px;"}
          %h1
            = link_to image_tag("logo.png") , root_path
        %li.toggle-topbar.menu-icon
          %a{:href => "#"}
            %span Menu
      %section.top-bar-section
        %ul.nav-bar.left
          -#%li.has-dropdown
          -#  = link_to "Competition #{conf_start('year')}" , "#"
          -#  %ul.dropdown
          %li
            = link_to  "Round 1" , frontend_rules_path
          %li
            = link_to  "Round 2" , frontend_rules1_path
          -#%li
          -#  = link_to  "Agenda" , frontend_agenda_path
          -#%li
          -#  = link_to  "Accommodation" , frontend_accommodation_path
          %li
            = link_to  "Documents" , frontend_competition_documents_path
          -#%li
          -#  = link_to "Finalists" , frontend_finalists_path
          %li
            = link_to "Organizers" , frontend_partners_path
          %li
            = link_to "Contact" , new_frontend_contact_form_path

        %ul.right
          %li
            - if user_signed_in? && !current_user.application.nil? && current_user.application.id
              %li
                = application_complete?
            - else
              - if  user_signed_in?
                %li.active
                  =link_to  "Apply now"  , application_process_create_application_path

            - if user_signed_in?
              %li
                = link_to "Log out" , destroy_user_session_path ,  { :method => :delete }
            - else
              %li
                = link_to "Sign in"  , new_user_session_path
              %li.active
                =link_to  "Apply now"  , new_user_registration_path
          %li.divider