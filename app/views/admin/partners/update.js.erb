<% if @partner.errors.any? %>
$('#corporate-partners').html("<%=escape_javascript(render 'partners' , :type => 'corporate') %>");
$('#individual-partners').html("<%=escape_javascript(render 'partners' , :type => 'individual') %>");
$("#errors-<%= @partner.id %>").html("<%=escape_javascript(render 'errors') %>");
$("#id-<%= @partner.id%>").html("<%= escape_javascript( render 'form' , action: 'edit' ) %>");


<% else %>

$("#id-<%= @partner.id%>").slideUp(350);
$("#errors-<%= @partner.id%>").slideUp(350);
$('#corporate-partners').html("<%=escape_javascript(render 'partners' , :type => 'corporate') %>");
$('#individual-partners').html("<%=escape_javascript(render 'partners' , :type => 'individual') %>");


<% end %>

