<% if @partner.errors.any? %>
    $('#corporate-partners').html("<%=escape_javascript(render 'partners' , :type => 'corporate') %>");
    $('#individual-partners').html("<%=escape_javascript(render 'partners' , :type => 'individual') %>");
    $('#errors').html("<%=escape_javascript(render 'errors') %>")
    $('#new-partner').html("<%= escape_javascript( render 'form', action: 'new') %>");

<% else %>
    $('#corporate-partners').html("<%=escape_javascript(render 'partners' , :type => 'corporate') %>");
    $('#individual-partners').html("<%=escape_javascript(render 'partners' , :type => 'individual') %>");
    $('#new-partner').slideUp(350);
    $('#errors').slideUp(350);
    $(document).foundation('equalizer', 'reflow');

<% end %>

